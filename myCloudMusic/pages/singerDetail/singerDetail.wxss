/* pages/singerDetail/singerDetail.wxss */
.imgshow{
    position: relative;
    width: 100%;
    height: 600rpx;
    overflow: hidden;
}

.imgshow image{
    display: block;
    position: absolute;
    width: 100%;
}

.imgshow .txtbox{
    position: absolute;
    bottom: 10%;
    left: 30rpx;
}

.txtbox .name{
    font-size: 50rpx;
    color: white;
    font-weight: bold;
}

.txtbox .txt{
    font-size: 30rpx;
    color: #fff;
}

.title{
    font-size: 35rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #333;
    position: relative;
    text-indent: 30rpx;
     
}
.content{
    font-size: 26rpx;
    padding: 0 30rpx;
    line-height: 40rpx;
    color: #666;
}

.musicbox .item{
    display: flex;
    padding: 10rpx 0rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid rgb(236, 236, 236);
    margin-left: 32rpx;
}

.item .txtbox{
    display: flex;
    flex-direction: column;
}

.item .playimg{
     width: 100rpx;
     height: 80rpx;
     display: flex;
}
.item .playimg image{
    width: 50rpx;
    height: 50rpx;
    margin: auto;
}

.item .txtbox .mname{
    font-size: 35rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 600rpx;
}

.item .txtbox .name{
    font-size: 28rpx;
    color: #777;
}