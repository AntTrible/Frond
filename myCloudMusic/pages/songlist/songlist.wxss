/* pages/songlist/songlist.wxss */
page{
    padding: 10rpx;
    box-sizing: border-box;
}
::-webkit-scrollbar{
    display: none;
}
swiper{
   width: 100%;
   height: 280rpx; 
}

swiper swiper-item{
    width: 100%;
}

swiper-item image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 40rpx;
}

.title{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #333;
    position: relative;
    text-indent: 30rpx;
}
.title::after{
    content: "";
    position: absolute;
    width: 5rpx;
    height: 50%;
    background-color: #cc2200;
    left: 0;
    top: 20rpx;
}

.hotlist{
    height: 300rpx;
    display: flex;
    overflow: auto;
    align-items: center;
}

.hotlist .item{
    width: 200rpx;
    text-align: center;
    margin-right: 20rpx;
}

.hotlist .item image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 40rpx;
}

.hotlist .item text{
    font-size: 28rpx;
    color: #4d4d4d;
}



.musicbox .item{
    display: flex;
    padding: 10rpx 0rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid rgb(236, 236, 236);
    margin-left: 32rpx;
}

.item .txtbox{
    display: flex;
    flex-direction: column;
}

.item .playimg{
     width: 100rpx;
     height: 80rpx;
     display: flex;
}
.item .playimg image{
    width: 50rpx;
    height: 50rpx;
    margin: auto;
}

.item .txtbox .mname{
    font-size: 35rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 600rpx;
}

.item .txtbox .name{
    font-size: 28rpx;
    color: #777;
}