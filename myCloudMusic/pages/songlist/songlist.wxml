<!--首页-->
<!--banner-->

<swiper indicator-dots="true"
        indicator-color="rgba(255,255,255,0.5)"
        indicator-active-color="rgba(194,12,12,1)"
        autoplay="true"
        interval="3000"
        duration="1000"
        circular="true"
>
    <block wx:for="{{background}}" wx:key="*this">
    <swiper-item>
       <image mode="widthFix" src="{{item.imageUrl}}"> </image>
    </swiper-item>
    </block>
</swiper>

<view class="title">热门歌手</view>
<view class="hotlist">
   <block wx:for="{{singer}}" wx:key="this">
   <view class="item">
      <image src="{{item.picUrl}}"></image>
      <text>{{item.name}}</text>
   </view>
   </block>
</view>

<view class="title">最新音乐</view>
<view class="musicbox">
   <view class="item">
      <view class="txtbox">
         <text class="mname">青花瓷</text>
         <text class="name">周杰伦*-七里香</text>
      </view>
      <view class="playimg">
         <image src="/image/播放.png"></image>
      </view>
   </view>
</view>
